@{
    Layout = "_3ColsLayout";
    ViewData["Title"] = "Perfil";
}


<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <div class="column">
            <div class="card">
                <div>
                    <img src="~/images/perfil.png" alt="img of person">
                </div>
                <br />
                <div class="container">
                    <p>Nome: @MVC_2020_Template.Helpers.Session.FullName</p>
                    @*<label>email: </label> @ViewBag.emailSession*@
                    <p>Mail: @MVC_2020_Template.Helpers.Session.Email</p>
                    @*<p><button class="button">Contact</button></p>*@
                    <p>IUPI: @MVC_2020_Template.Helpers.Session.IUPI</p> 
                </div>
            </div>
        </div>
    </div>
</div>