<script>
    function toggleText() {
        var text = document.getElementById("hidden_info");
        if (text.style.display === "none") {
            text.style.display = "block";
        } else {
            text.style.display = "none";
        }
    }

    function openModal() {
        $('.ui.modal')
            .modal('show')
            ;
    }

    function openUIDetails(obj) {
         $.post("UI_Details_Helper", { obj: JSON.stringify(obj) }, function (data) {
            window.open(data,'_blank');
        });
        @* window.open('@Url.Action("Publication_details","Home")');*@
    }

    //Menu
    $('.ui .item').on('click', function () {
        $('.ui .item').removeClass('active');
        $(this).addClass('active');
    });

    $(document).ready(function () {
        $('.ui.form')
            .form({
                fields: {
                    nome: {
                        identifier: 'nome',
                        rules: [
                            {
                                type: 'empty',
                                prompt: 'Coloque nome da Unidade de Investigação'
                            }
                        ]
                    },
                    acronimo: {
                        identifier: 'acronimo',
                        rules: [
                            {
                                type: 'empty',
                                prompt: 'Coloque um acrónimo'
                            }
                        ]
                    },
                    data_ini: {
                        identifier: 'data_ini',
                        rules: [
                            {
                                type: 'empty',
                                prompt: 'Selecione uma data'
                            }
                        ]
                    },
                    data_fim: {
                        identifier: 'data_fim',
                        rules: [
                            {
                                //type: 'empty',
                                //prompt: 'Please enter a username'
                            }
                        ]
                    },
                    uri: {
                        identifier: 'uri',
                        rules: [
                            {
                                type: 'empty',
                                prompt: 'Coloque um URI'
                            },
                        ]
                    },
                    //fraction: {
                    //    identifier: 'fraction',
                    //    rules: [
                    //        {
                    //            type: 'checked',
                    //            prompt: 'You must agree to the terms and conditions'
                    //        }
                    //    ]
                    //},
                    orgUnitId2: {
                        identifier: 'orgUnitId2',
                        rules: [
                            {
                                type: 'empty',
                                prompt: 'You must agree to the terms and conditions'
                            }
                        ]
                    },
                    value: {
                        identifier: 'value',
                        rules: [
                            {
                                type: 'empty',
                                prompt: 'You must agree to the terms and conditions'
                            }
                        ]
                    },
                    langId: {
                        identifier: 'langId',
                        rules: [
                            {
                                type: 'empty',
