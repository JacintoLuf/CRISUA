<script>
    function GetDynamicTextboc() {
        return '<div class="col-md-10 input-group">'+
                                    '<span role="status" aria-live="polite" class="ui-helper-hidden-accessible">André Ventura da Cruz Marnoto Zúquete</span>'+
                                    '<input class="form-control ui-autocomplete-input" type="text" name="dc_contributor_author" id="dc_contributor_author_1" size="50" value="" autocomplete="off">'+
                                '</div>'+
                                '<button class="btn btn-danger col-md-2" name="submit_dc_contributor_author_remove_0" value="Remove Entry" onclick="RemoveTexBox(this)">'+
                                    '<span class="glyphicon glyphicon-trash"></span>'+
                                    '&nbsp;&nbsp;Remove Entry'+
                                '</button>'
    }

    function AddTexBox() {
        var div = document.createElement("div");
        div.className = "row col-md-12";
        div.innerHTML = GetDynamicTextboc();
        document.getElementById("autores").appendChild(div);
    }

