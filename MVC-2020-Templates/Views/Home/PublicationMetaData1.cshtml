                                            <option value="1" selected=@(mes == "1" || mes=="01" ? "true" : null)>January</option>
                                            <option value="2" selected=@(mes == "2" || mes=="02"? "selected" : null)>February</option>
                                            <option value="3" selected=@(mes == "3" || mes=="03"? "selected" : null)>March</option>
                                            <option value="4" selected=@(mes == "4" || mes=="04"? "selected" : null)>April</option>
                                            <option value="5" selected=@(mes == "5" || mes=="05"? "selected" : null)>May</option>
                                            <option value="6" selected=@(mes == "6" || mes=="06"? "selected" : null)>June</option>
                                            <option value="7" selected=@(mes == "7" || mes=="07"? "selected" : null)>July</option>
                                            <option value="8" selected=@(mes == "8" || mes=="08"? "selected" : null)>August</option>
                                            <option value="9" selected=@(mes == "9" || mes=="09"? "selected" : null)>September</option>
                                            <option value="10" selected=@(mes == "10" ? "selected" : null)>October</option>
                                            <option value="11" selected=@(mes == "11" ? "selected" : null)>November</option>
                                            <option value="12" selected=@(mes == "12" ? "selected" : null)>December</option>
                                        </select>
                                    </span>
                                    <span class="input-group col-md-4">
                                        <span class="input-group-addon">Year:</span>
                                        <input class="form-control" type="text" name="dc_date_issued_year" size="4" maxlength="4" value="@dados["Ano"]">
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <br>


                @*----------Volume-----------*@
                <div class="help-block">
                    Introduza o número do volume ou a série da revista em que foi publicado.
                </div>
                <div class="row">
                    <label class="col-md-2">volume</label>
                    <div class="col-md-10">
                        <div class="row col-md-12">
                            <div class="col-md-10">
                                <input class="form-control" type="text" name="degois_publication_volume" id="degois_publication_volume" size="50" value="@dados["Volume"]">
